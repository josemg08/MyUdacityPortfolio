<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/size_10dp"
    android:layout_margin="@dimen/distance_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemReviewBackgroundTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/distance_10dp"
            style="@style/ItemReviewTextTheme"/>

        <TextView
            android:id="@+id/review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reviewer"
            android:layout_toEndOf="@id/reviewer"
            android:padding="@dimen/distance_5dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
