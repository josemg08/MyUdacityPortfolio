<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/shape_rounded_primary"/>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >

                    <solid android:color="@color/colorPrimaryDark"/>

                    <padding
                        android:bottom="@dimen/size_5dp"
                        android:left="@dimen/size_5dp"
                        android:right="@dimen/size_5dp"
                        android:top="@dimen/size_5dp" >
                    </padding>

                    <corners android:radius="@dimen/size_10dp" >
                    </corners>

                </shape>
            </item>
        </layer-list>
    </item>

</selector>